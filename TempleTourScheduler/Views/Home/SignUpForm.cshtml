@model Appointment

@if (TempData["message"] != null)
{
    <div class="text-center alert alert-success">@TempData["message"]</div>
}

<form asp-action="SignUpForm" method="POST">
    <label asp-for="GroupName">Name of Group</label>
    <input asp-for="GroupName" type="text" />
    <span asp-validation-for="GroupName" class="text-danger"></span>
    <br />

    <label asp-for="GroupSize">Size of Group</label>
    <input asp-for="GroupSize" type="text" />
    <span asp-validation-for="GroupSize" class="text-danger"></span>
    <br />

    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="text" />
    <span asp-validation-for="Email" class="text-danger"></span>
    <br />

    <label asp-for="Contact">Phone Number (Optional)</label>
    <input asp-for="Contact" type="text" />
    <span asp-validation-for="Contact" class="text-danger"></span>
    <br />

    @*Ensure that the Timeslot and Day of Week are not editable*@
    <label asp-for="TimeSlot">Time Slot</label>
    <input asp-for="TimeSlot" value="@Model.TimeSlot" type="text" readonly />
    <br />

    <label asp-for="DayOfWeek">Day of Week</label>
    <input asp-for="DayOfWeek" value="@Model.DayOfWeek" type="text" readonly />
    <br />

    <input asp-for="TimeId" value="@Model.TimeId" type="hidden"/>
    <button class="btn btn-primary round" type="submit">Sign Up</button>

</form>
