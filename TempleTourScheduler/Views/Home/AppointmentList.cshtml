@model AppointmentListViewModel

@*Display the timeslot and groupname for the appointment list.*@

<div class="container">
    <h3>Schedule</h3>

    <div class="row">
        <div class="card card-outline-primary m-1 p-1 shadow-sm fixed-width-item">
            <h5>Monday</h5>
            @foreach (var x in Model.Monday)
            {
                <span class="badge badge-primary">@x.TimeSlot @x.GroupName</span>
                <br />
            }
        </div>
        <div class="card card-outline-primary m-1 p-1 shadow-sm fixed-width-item">
            <h5>Tuesday</h5>

            @foreach (var x in Model.Tuesday)
            {
