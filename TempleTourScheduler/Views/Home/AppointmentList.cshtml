                <br />
            }
        </div>
        <div class="card card-outline-primary m-1 p-1 shadow-sm fixed-width-item">
            <h5>Thursday</h5>

            @foreach (var x in Model.Thursday)
            {
                <span class="badge badge-primary">@x.TimeSlot @x.GroupName</span>
                <br />
            }
        </div>
        <div class="card card-outline-primary m-1 p-1 shadow-sm fixed-width-item">
            <h5>Friday</h5>

            @foreach (var x in Model.Friday)
            {
                <span class="badge badge-primary">@x.TimeSlot @x.GroupName</span>
                <br />
            }
        </div>
        <div class="card card-outline-primary m-1 p-1 shadow-sm fixed-width-item">
            <h5>Saturday</h5>

            @foreach (var x in Model.Saturday)
            {
                <span class="badge badge-primary">@x.TimeSlot @x.GroupName</span>
                <br />
            }
        </div>
        <div class="card card-outline-primary m-1 p-1 shadow-sm fixed-width-item">
            <h5>Sunday</h5>

            @foreach (var x in Model.Sunday)
            {
                <span class="badge badge-primary">@x.TimeSlot @x.GroupName</span>
                <br />
            }
        </div>
    </div>
</div>